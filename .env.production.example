# =============================================================================
# Production Environment Variables
# Copy this file to .env.production and fill in your values
# =============================================================================

# --- Core ---
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# --- Database (host machine PostgreSQL) ---
# Use host.docker.internal if using bridge network, localhost if using host network
DATABASE_URL=postgresql://USER:PASSWORD@host.docker.internal:5432/rental_management

# --- Redis (host machine Redis) ---
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
# REDIS_PASSWORD=        # uncomment if your Redis requires auth

# --- Auth (next-auth v5) ---
AUTH_SECRET=              # generate with: openssl rand -base64 32
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Cron Security ---
CRON_SECRET=              # generate with: openssl rand -hex 32

# --- SendGrid (email) ---
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=

# --- Twilio (SMS) ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# --- AI (optional - at least one for AI features) ---
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# --- Google Calendar (optional) ---
# GOOGLE_CALENDAR_CREDENTIALS=  # JSON string
# GOOGLE_CALENDAR_ID=
