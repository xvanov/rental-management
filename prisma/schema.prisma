  lastChangedDate DateTime?
  notes           String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  property Property    @relation(fields: [propertyId], references: [id])
  filters  AirFilter[]
}

// ─── Air Filter ───────────────────────────────────────────────────────────

